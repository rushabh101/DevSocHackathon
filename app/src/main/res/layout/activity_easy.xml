<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical"
    tools:context=".Easy">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/user_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:alpha="0.5"
            android:fontFamily="@font/adobe_dia"
            android:textSize="36sp"
            android:hint="PASSWORD"
            android:imeActionLabel="test"
            android:imeOptions="actionGo"
            android:inputType="text"
            android:padding="5dp"
            android:textAllCaps="true"
            android:textColor="#59ff82"
            android:textColorHint="#59ff82" />

        <Button
            android:id="@+id/enterb"
            android:layout_width="66dp"
            android:layout_height="32dp"
            android:layout_marginLeft="115dp"
            android:layout_marginTop="20dp"
            android:background="#59ff82"
            android:fontFamily="@font/zig"
            android:padding="5dp"
            android:shadowRadius="@android:integer/config_longAnimTime"
            android:text="ENTER"
            android:textAlignment="center"
            android:textColor="#0e281b"
            android:textSize="7sp"
            app:backgroundTint="@null" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_marginTop="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/zig"
            android:padding="5dp"
            android:text="Attempts Remaining:"
            android:textColor="#59ff82" />

        <ImageView
            android:id="@+id/at1"
            android:layout_marginTop="56dp"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/scroll"/>
        <ImageView
            android:id="@+id/at2"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="56dp"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/scroll"/>
        <ImageView
            android:id="@+id/at3"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="56dp"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/scroll"/>
        <ImageView
            android:id="@+id/at4"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="56dp"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/scroll"/>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left">

        <TextView
            android:layout_marginTop="70dp"
            android:id="@+id/pre_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/zig"
            android:padding="10dp"
            android:text="pre text"
            android:textColor="#59ff82"
            android:textSize="17sp" />

        <TextView
            android:layout_marginTop="70dp"
            android:id="@+id/col1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/zig"
            android:padding="10dp"
            android:text="Text"
            android:textColor="#59ff82"
            android:textSize="17sp" />


    </LinearLayout>


    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="300dp">

        <include layout="@layout/eventlog" />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>